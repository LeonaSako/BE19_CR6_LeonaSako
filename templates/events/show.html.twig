{% extends 'base.html.twig' %} {% block title %}Events{% endblock %} {% block body %}

<div class="d-flex justify-content-center ">

    <div class="card m-2 pt-2" style="min-width: 300px; max-width: 300px; min-height: 1020px; max-height: 1020px;">
        <img src="{{event.eventimage}} " class="card-img-top " style="width: 100%; height: 300px;" alt="... ">
        <div class="card-body">
            <h5 class="card-title">Name: {{ event.eventName }}</h5>
            <hr>
            <p class="card-text">Description: {{ event.eventDescription }}</p>
            <hr>
            <p class="card-text">Capacity: {{ event.eventCapacity }}</p>
            <hr>
            <p class="card-text">Contact e-mal: {{ event.eventEmail }}</p>
            <hr>
            <p class="card-text">Address: {{ event.eventAddress }}</p>
            <hr>
            <p class="card-text">Url: {{ event.eventUrl }}</p>
            <hr>
            <p class="card-text">Type: {{ event.eventType }}</p>
            <br>

        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">{{ event.eventDate ? event.eventDate|date('Y-m-d H:i:s') : '' }}</li>
        </ul>
        <div class="card-body">
            <a class="btn btn-primary" href="{{ path('app_events_index') }}">back to list</a>
            <a class="btn btn-primary ms-2  ps-4 pe-4" href="{{ path('app_events_edit', {'id': event.id}) }}">edit</a>

        </div>
        <a class="p-2 m-2" href=""> {{ include('events/_delete_form.html.twig') }}</a>
    </div>
</div>





{% endblock %}